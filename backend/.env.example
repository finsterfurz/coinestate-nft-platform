# =================================================================
# CoinEstate NFT Platform - Backend Environment Configuration
# =================================================================

# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1
SERVER_HOST=localhost
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coinestate_dev
DB_USER=coinestate_user
DB_PASSWORD=secure_password_here
DB_MAX_CONNECTIONS=20
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=super_secure_jwt_secret_key_min_64_chars_long_replace_this
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=super_secure_refresh_secret_key_different_from_main
JWT_REFRESH_EXPIRE=7d

# Encryption & Security
ENCRYPTION_KEY=32_char_encryption_key_here_12345
CSRF_SECRET=csrf_secret_key_here
SESSION_SECRET=session_secret_key_here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true

# Blockchain Configuration
ETHEREUM_NETWORK=goerli
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key
CONTRACT_ADDRESS_NFT=0x...
CONTRACT_ADDRESS_GOVERNANCE=0x...
PRIVATE_KEY_OPERATOR=0x...
GAS_LIMIT_DEFAULT=500000
GAS_PRICE_MULTIPLIER=1.2

# IPFS Configuration
IPFS_API_URL=https://api.pinata.cloud
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
IPFS_GATEWAY_URL=https://gateway.pinata.cloud

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@coinestate.io
FROM_NAME=CoinEstate Platform

# KYC Provider (Example: Jumio)
KYC_PROVIDER=jumio
KYC_API_URL=https://api.jumio.com
KYC_API_KEY=your_kyc_api_key
KYC_API_SECRET=your_kyc_secret
KYC_WEBHOOK_SECRET=your_webhook_secret

# File Upload
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_PATH=uploads
S3_BUCKET_NAME=coinestate-uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
MIXPANEL_TOKEN=your_mixpanel_token
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Security Headers
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.coinestate.io wss://api.coinestate.io;"
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# API Keys & External Services
COINGECKO_API_KEY=your_coingecko_api_key
MORTGAGE_API_KEY=your_mortgage_api_key
PROPERTY_DATA_API_KEY=your_property_data_api_key

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_DASHBOARD_PORT=5001
QUEUE_CONCURRENCY=5

# Development Only
DEBUG_MODE=true
API_DOCS_ENABLED=true
SEED_DATABASE=false
MOCK_BLOCKCHAIN=true
MOCK_KYC=true
MOCK_EMAIL=true

# Production Settings (Override in production)
# NODE_ENV=production
# DEBUG_MODE=false
# API_DOCS_ENABLED=false
# DB_SSL=true
# SEED_DATABASE=false
# MOCK_BLOCKCHAIN=false
# MOCK_KYC=false
# MOCK_EMAIL=false